generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id         Int     @id @default(autoincrement())
  title      String
  image      String
  alt        String
  price      Int
  content    String
  isArchived Boolean @default(false)

  categories Category[]
}

model Category {
  id   Int    @id @default(autoincrement())
  name String @unique

  products Product[]
}
